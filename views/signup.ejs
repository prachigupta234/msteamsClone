<!DOCTYPE html>
<html>

<head>
	<meta charset="utf-8">
	<title></title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<!-- <link rel="stylesheet" type="text/css" href="/css/nunito-font.css"> -->
	<!-- Main Style Css -->
	<%- include("cdn/style.ejs") -%>
	<link rel="stylesheet" href="/style-login.css" />
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

	<style>
		/* The Close Button */
		.close {
			color: #aaaaaa;
			float: right;
			font-size: 28px;
			font-weight: bold;
		}

		.close:hover,
		.close:focus {
			color: #000;
			text-decoration: none;
			cursor: pointer;
		}
	</style>

</head>

<body class="form-v6">
	<% if(err!==''){ %>
		<div class="alert alert-danger alert-dismissible fade show"
			style="padding: 2px; text-align: center; " role="alert">
			<span id="msg"><%=err%></span>
			<button type="button" class="close" data-dismiss="alert" aria-label="Close" style="padding: inherit;">
				<span aria-hidden="true">&times;</span>
			</button>
	</div>
	<% }%>
	<!-- Trigger/Open The Modal -->
	<!-- <button id="myBtn">Open Modal</button> -->
	<div class="page-content">
		<div class="form-v6-content" id="loginModal">

			<!-- <div class="form-left">
				<img src="images/form-v6.jpg" alt="form">
			</div> -->
			<form class="form-detail login" action="signup" method="post" id="signupform">
				<!-- <span class="close">&times;</span> -->
				<h2>Signup</h2>
				<div class="form-row">
					<label for="phone" class="form-label">Phone Number*:</label><br>
					<input type="tel" name="phone" id="phone" pattern="^\d{10}$" class="input-text phone"
						placeholder="Enter phone number">
						<div id="phoneHelp" class="form-text"></div>
				</div>
				<div class="form-row">
					<label for="name" class="form-label">Name*:</label><br>
					<input type="text" name="name" id="name" class="input-text name"
						placeholder="Enter name">
						<div id="nameHelp" class="form-text"></div>
				</div>
				<div class="form-row">
					<label for="password" class="form-label">Create Password*:</label><br>
					<input type="password" name="password" id="password" class="input-text password"
						placeholder="Create  Password">
						<div id="passwordHelp" class="form-text"></div>
				</div>
				
				<!-- <div class="form-row">
					<label class="label">
						<input type="checkbox" name="checkbox" value="remember">Remember Me
					</label>
					<a class="forgot-password-link" href="#">Forgot password</a>
				</div> -->
				<br>

				<div class="form-row-last">
					<input type="submit" name="loginbtn" class="loginbtn" value="Sign Up">
				</div>
				<label class="label-signup">
					Already  Registered?<a class="signup-link" href="login"> Login</a>
				</label>

			</form>

		</div>
	</div>
	
	<%- include("cdn/script.ejs") -%>

	<script>
		$(document).ready(function() {
			$('#signupform').submit(e=>{
		   const number = $('#phone').val();
		   const password = $('#password').val();
		   const name =$("#name").val();
		   if(number==='' || number.length!==10){
			   e.preventDefault();
			   $('#phoneHelp').text('Please Enter a 10 digit valid Mobile Number').css('color', 'red');
		   }else if(name===''){
			   e.preventDefault();
			   $('#nameHelp').text('Please Enter Name').css('color', 'red');
		   }else if(password===''){
			   e.preventDefault();
			   $('#passwordHelp').text('Please Enter Password').css('color', 'red');
		   }else{
			   e.target.elements.number.value=number; 
		   }
	   });

	   });
	</script>

</body>

</html>